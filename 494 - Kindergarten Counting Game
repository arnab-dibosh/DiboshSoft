#include <stdio.h>
#include <stdlib.h>


int main()
{
    char str[1000];
    int i, wordStart=0, wordCount=0;


    while(gets(str)){
       wordCount=0; wordStart=0;

        for(i=0 ; str[i]; i++)
        {
            if((str[i]>= 'A' && str[i]<= 'Z') || (str[i]>= 'a' && str[i]<='z')) {

                if(wordStart==0) wordCount++;
                wordStart=1;
            }
            else{
                wordStart=0;
            }
        }
        printf("%d\n", wordCount);
    }

    return 0;
}
